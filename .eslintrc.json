{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "extends": "vizzuality",
  "rules": {
    "max-len": 0,
    "no-unused-expressions": 0,
    "react/no-array-index-key": 0
  }
}
